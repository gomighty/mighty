---
interface Props {
  initialCount: number;
}

const { initialCount } = Astro.props;
---

<html>
  <head></head>
  <body>
    <div class="counter" x-data={`{ count: ${initialCount} }`}>
      <button x-on:click="count--">-</button>
      <pre x-text="count">{ initialCount }</pre>
      <button x-on:click="count++">+</button>
    </div>
  </body>
</html>
